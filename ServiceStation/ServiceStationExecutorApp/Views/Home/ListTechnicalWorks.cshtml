@using ServiceStationContracts.ViewModels

@model List<TechnicalWorkViewModel>

@{
    ViewData["Title"] = "ListTechnicalWorks";
}
<section>
    <h2>Список ТО:</h2>
    <table class="table">
        <thead class="thead-dark">
            <tr style="height: 31px">
                <th>
                    Номер
                </th>
                <th>
                    Тип ТО
                </th>
                <th>
                    Дата начала ТО
                </th>
                <th>
                    Цена
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateStartWork)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkPrice)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row justify-content-md-center">
        <a asp-controller="Home" asp-action="CreateTechnicalWork" class="btn btn-secondary text-center col-2">Добавить</a>
        &nbsp;
        <a asp-controller="Home" asp-action="UpdateTechnicalWork" class="btn btn-secondary text-center col-2">Изменить</a>
        &nbsp;
        <a asp-controller="Home" asp-action="DeleteTechnicalWork" class="btn btn-secondary text-center col-2">Удалить</a>
    </div>
</section>
